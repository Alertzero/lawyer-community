<h1>Search Results</h1>
<p><%= link_to "Back", new_search_path %></p>

<% if @search.search_lawyer.empty? %>
    <p>No Pokemon were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @search.search_lawyer.each do |lawyer| %>
            <tr>
                <td><%= lawyer.name %></td>
                <td><%= lawyer.type %></td>
                <td><%= lawyer.region %></td>
                <td><%= link_to 'Show', lawyer %></td>
                <td><%= link_to 'Edit', edit_lawyer_path(lawyer) %></td>
                <td><%= link_to 'Destroy', lawyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
</table>
<% end %>