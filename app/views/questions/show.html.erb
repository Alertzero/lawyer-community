<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-12">
    <div class="card mb-3">
      <div class="card-header bg-warning font-weight-bold">
        <%= @question.title %>
      </div>
      <div class="card-body">
        <%= @question.body %>
      </div>
    </div>
  </div>
</div>
<div class="mb-3">
  <%= render "questions/comments", comments: @question.comments%>
</div>
<%= form_for @comment, remote: true do |form|%>
  <%= form.hidden_field :question_id, value: @question.id%>
  <%= form.hidden_field :client_id, value: @question.client.id%>
  <div class="card mb-3">
    <div class="card-header">
      <%= form.label :message, "ความคิดเห็น" %>
    </div>
    <div class="card-body">
      <%= form.rich_text_area :message, class: "form-control"%>
    </div>
    <div class="card-footer">
      <%= form.submit "ส่งความคิดเห็น", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
